{
  "name": "telegram-erpnext-bot",
  "version": "1.0.0",
  "description": "Bot Telegram intelligent intégré avec Rasa et ERPNext",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "check": "node check-config.js",
    "rasa:train": "cd rasa && rasa train",
    "rasa:run": "cd rasa && rasa run --enable-api --cors '*' --port 5005"
  },
  "keywords": [
    "telegram",
    "bot",
    "erpnext",
    "rasa",
    "nlu",
    "ai"
  ],
  "author": "Mehdi",
  "license": "MIT",
  "dependencies": {
    "telegraf": "^4.15.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "redis": "^4.6.10",
    "node-cache": "^5.1.2",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "rate-limiter-flexible": "^4.0.0",
    "joi": "^17.11.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
